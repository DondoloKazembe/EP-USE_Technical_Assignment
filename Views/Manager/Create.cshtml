@model EPI_USE_Web_Application.Models.ManagerModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">

        <div class="col-md-12">

            <h1 class="text-center">Create New Manager</h1>
            <div class="row">

                <div class="col-md-4  "></div>
                <div class=" col-md-4 ">
                    <form asp-action="Create">

                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-group">

                            <label asp-for="ManagerNumber" class="control-label">Manager Number </label>
                            <input asp-for="ManagerNumber" class="form-control" />
                            <span asp-validation-for="ManagerNumber" class="text-danger"></span>

                        </div>
                        <p></p>
                        <p></p>
                        <div class="form-group">

                            <label asp-for="ManagerName" class="control-label">Manager Name </label>
                            <input asp-for="ManagerName" class="form-control" />
                            <span asp-validation-for="ManagerName" class="text-danger"></span>

                        </div>
                        <p></p>
                        <p></p>
                        <div class="form-group">

                            <label asp-for="ManagerSurname" class="control-label">Manager Surname </label>
                            <input asp-for="ManagerSurname" class="form-control" />
                            <span asp-validation-for="ManagerSurname" class="text-danger"></span>

                        </div>
                        <p></p>
                        <p></p>
                        <div class="form-group">

                            <label asp-for="ManagerSalary" class="control-label"> Manager Salary</label>
                            <input asp-for="ManagerSalary" class="form-control" />
                            <span asp-validation-for="ManagerSalary" class="text-danger"></span>

                        </div>
                        <p></p>
                        <p></p>
                        <p></p>
                        <p></p>
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-success" />
                            <a asp-action="Index" class="btn btn-warning">Cancel</a>
                        </div>

                    </form>

                </div>
                <div class="col-md-4 "></div>

            </div>

        </div>

    </div>

</div>


@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

