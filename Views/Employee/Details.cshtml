@model EPI_USE_Web_Application.Models.EmployeeModel

@{
    ViewData["Title"] = "EmployeeDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">

        <div class="col-md-12">

            <h1 class="text-center">Employee Details</h1>
            <div class="row">

                <div class="col-md-4  "></div>
                <div class=" col-md-4 ">
                    <ul>
                        <li>
                            <text>Employee Number: </text>@Html.DisplayFor(model => model.EmployeeNumber)
                        </li>

                        <li>
                            <text>Employee Name: </text>
                            @Html.DisplayFor(model => model.EmployeeName)
                        </li>
                                                <li>
                            <text>Employee Surname: </text>
                            @Html.DisplayFor(model => model.EmployeeSurname)
                        </li>
                        <li>
                            <text>Employee Birth Date: </text>
                            @Html.DisplayFor(model => model.BirthDate)
                        </li>
                        <li>
                            <text>Employee Position: </text>
                            @Html.DisplayFor(model => model.EmployeePosition)
                        </li>
                        <li>
                            <text>Employee Salary: </text>
                            @Html.DisplayFor(model => model.EmployeeSalary)
                        </li>
                        <li>
                            <text>Line Manager Number: </text>
                            @Html.DisplayFor(model => model.ManagerNumber)
                        </li>
                    </ul>
                    <p></p>
                    <p></p>
                    <p></p>
                    <p></p>
                    <div>
                        <a asp-action="Update" asp-route-id="@Model.EmployeeNumber" class="btn btn-primary">Update</a>
                        <a asp-action="Index" class="btn btn-warning">Employee List</a>
                    </div>

                </div>
                <div class="col-md-4 "></div>

            </div>

        </div>

    </div>

</div>
